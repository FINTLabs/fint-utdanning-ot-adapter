{
  "request": {
    "method": "POST",
    "urlPath": "/oauth/token",

    "headers": {
      "Content-Type": {
        "contains": "application/x-www-form-urlencoded"
      },
      "Authorization": {
        "contains": "Basic"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json;charset=UTF-8",
      "Cache-Control": "no-store",
      "Pragma": "no-cache"
    },
    "body": "{\n  \"access_token\": \"eyJhbGciOiJSUzI1NiIsInR5cCIgOiAiSldUIiwia2lkIiA6ICJibG9iYmVyLWtleS0xIn0..SIGNATURE_PLACEHOLDER\",\n  \"token_type\": \"Bearer\",\n  \"refresh_token\": \"eyJhbGciOiJIUzI1NiIsInR5cCIgOiAiSldUIiwia2lkIiA6ICJiZWxsc19rZXkifQ.eyJleHAiOjE3MzAwMDAwMDAsImlhdCI6MTczMDAwMDAwMCwic3ViIjoiZmFsdmlZS3JNbE9oU3pZRWp6T1RReVFDa3F1d0hNR2R2In0.SIGNATURE_PLACEHOLDER\",\n  \"expires_in\": 3600,\n  \"scope\": \"fint-adapter\"\n}",
    "transformers": ["response-template"],
    "transformerParameters": {
      "accessTokenExpiry": "{{now offset=+1h format='epoch'}}",
      "refreshTokenExpiry": "{{now offset=+7d format='epoch'}}"
    }
  },
  "persistent": true,
  "priority": 10
}